{
  "name": "react-new-hoc",
  "version": "0.0.23",
  "description": "Work with React and HOCs (Higher-Order Components)",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --project tsconfig.build.json",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir dist/cjs",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn clean && yarn test && yarn lint",
    "lint": "eslint . --max-warnings=0",
    "test": "jest"
  },
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "hoc",
    "hocs",
    "higher-order",
    "component",
    "with"
  ],
  "author": "Leonardo Guarnieri de Bastiani (leogbastiani@gmail.com)",
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leobastiani/react-new-hoc.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "hotscript": "^1.0.12",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.8",
    "react": ">=18",
    "react-dom": ">=18",
    "rimraf": "^5.0.1",
    "tsd": "^0.28.1",
    "typescript": "^5.1.3"
  }
}
